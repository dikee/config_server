case $1 in
   start)
       # source /home
       # Launch your program as a detached process
       /home/ec2-user/pypiserver/venv-pypi/bin/python /home/ec2-user/pypiserver/venv-pypi/bin/pypi-server -p 8080 /home/ec2-user/pypiserver/packages/ & 
       # Get its PID and store it
       THE_PID=$!
       sudo echo $THE_PID > ${PIDFILE}
       echo $THE_PID
   ;;
   stop)
      sudo kill -9 `cat ${PIDFILE}`
      # Now that it's killed, don't forget to remove the PID file
      sudo rm ${PIDFILE}
      echo "Service Stopped PyPiServer `cat ${PIDFILE}`"
   ;;
   *)
      echo "usage: nrg-pypiserver {start|stop}" ;;
esac
exit 0